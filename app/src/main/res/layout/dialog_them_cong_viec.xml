<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="10dp"
    android:background="@drawable/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtThem"
        android:gravity="center"
        android:textStyle="bold"
        android:padding="10dp"
        android:text="Thêm Công Việc"
        android:textColor="#E81A20"
        android:textSize="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    
    <EditText
        android:textColor="#FAE214"
        android:textColorHint="#FAE214"
        android:textSize="25dp"
        android:hint="Mời Bạn Nhập Công Việc"
        android:id="@+id/edtThem"
        android:layout_margin="20dp"
        android:layout_below="@+id/txtThem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:padding="20dp"
        android:textColor="#F02"
        android:background="@drawable/custom_xn_btn"
        android:id="@+id/btnThem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtThem"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="Thêm"
        android:textSize="25dp"
        android:textStyle="bold" />

    <Button
        android:textColor="#FFC107"
        android:background="@drawable/custom_button"
        android:id="@+id/btnHuy"
        android:text="Hủy"
        android:gravity="center"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/btnThem"
        android:layout_below="@id/edtThem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</RelativeLayout>